@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar conta";
}

<style>
    .h1, h1 {
        font-size: 1.5rem;
    }
</style>

<div class="row h-100 justify-content-center align-items-center">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="min-width: 350px;">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Nif"></label>
            <input asp-for="Input.Nif" class="form-control" />
            <span asp-validation-for="Input.Nif" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Telemovel"></label>
            <input asp-for="Input.Telemovel" class="form-control" />
            <span asp-validation-for="Input.Telemovel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-sm btn-outline-secondary form-control">Registar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
