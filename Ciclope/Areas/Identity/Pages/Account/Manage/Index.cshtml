@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row h-100 ">
    <div class="col-md-10 row h-100 justify-content-center align-items-center">
    <form id="profile-form" method="post" style="min-width: 350px;">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @*adicionado*@
        <div class="form-group">
            <label asp-for="Input.Nif"></label>
            <input asp-for="Input.Nif" class="form-control" />
        </div>
        @*adicionado*@
        <div class="form-group">
            <label asp-for="Input.Telemovel"></label>
            <input asp-for="Input.Telemovel" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Input.PhoneNumber"></label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
         <div class="row">
            <button type="submit" class="btn btn-sm btn-outline-secondary form-control" id="update-profile-button">Guardar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}