@model Ciclope.Models.CertidaoPermanente

@{
    ViewData["Title"] = "Novo Certificado Permanente";
}

<div class="row h-100 justify-content-center align-items-center">
    <form method="post" enctype="multipart/form-data">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <div class="form-group row">
            <div class="col-4">
                <label class="control-label">Escolha o certificado</label>
            </div>
            <div class="col-8">
                <input type="file" name="files" id="uploadBox" class="form-control" style="height: 44px"/>
                <span asp-validation-for="LocalFicheiro" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a asp-action="Index" asp-route-id=@ViewBag.Id class="btn btn-sm btn-outline-secondary form-control">Voltar</a>
            </div>
            <div class="col">
                <button type="submit" onclick="return validateInput()" class="btn btn-sm btn-outline-secondary form-control">Criar</button>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/n94ifuzvl80pchikopiwgz2esrw8n28dwcywvpejlqrregfp/tinymce/5/tinymce.min.js"></script>
    <script>
        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal("Erro", "Por favor, selecione o certificado PME", "error");
                return false;
            }
            return true;
        };
    </script>
}

