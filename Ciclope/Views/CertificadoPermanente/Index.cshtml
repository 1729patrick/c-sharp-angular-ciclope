@model IEnumerable<Ciclope.Models.CertidaoPermanente>

@{
    ViewData["Title"] = "Lista Certificados Permanentes";
}

<div class="row h-100">
    <partial name="_DisplaySideMenuPartial" />  
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Lista Certificados Permanentes</h1>

            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <button class="btn btn-sm btn-outline-secondary"
                            onclick="location.href='@Url.Action("Create", "CertificadoPermanente")'">Novo Certificado</button>
                    
                </div>
            </div>
        </div>
        <table class="table table-bordered">
                <tr>
                    <th>Data</th>
                    <th>Certificado</th>
                </tr>
                @foreach (var item in Model) {
        <tr>
            <td>@item.Data.ToString("d")</td>
            <td>
                <a target="_blank" href='@("https://localhost:5001/"+item.LocalFicheiro)'>
                    <i class="bi bi-info-circle"></i>
                </a>
            </td>
        </tr>
                }
        </table>
    </main>
</div>