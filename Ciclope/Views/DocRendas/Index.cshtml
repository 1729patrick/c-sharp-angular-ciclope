@model IEnumerable<Ciclope.Models.DocRendas>
@using Ciclope.Services
@inject ICurrency Currency

@{
    ViewData["Title"] = "Lista Rendas";
    var idEmpresa = @ViewBag.idEmpresa;
}


<div class="row h-100">
    <partial name="_DisplaySideMenuPartial" for="@idEmpresa" />
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">@ViewData["Title"]</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Create" asp-route-id=@idEmpresa>
                        Nova Renda
                    </a>
                    
                </div>
            </div>
        </div>
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DataEmissao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RetencaoIRS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImportanciaRecebida)
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DataEmissao.ToString("d")</td>
                    <td>@Currency.Format(item.RetencaoIRS)</td>
                    <td>@Currency.Format(item.ImportanciaRecebida)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pen"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-x-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </main>
</div>

