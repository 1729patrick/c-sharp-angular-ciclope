@model Ciclope.Models.DocFundosCompensacao

@{
    ViewData["Title"] = "Editar Fundo Compensação";
}

<div class="row h-100">
    <partial name="_DisplaySideMenuPartial" for="IdEmpresa" />
    <div class="col-md-10 row h-100 justify-content-center align-items-center">
        <form asp-action="Edit">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdEmpresa" />
            <input type="hidden" asp-for="LocalFicheiro" />
            <div class="form-group row">
                <div class="col">
                    <label asp-for="DataEmissao" class="control-label"></label>
                    <input asp-for="DataEmissao" class="form-control" />
                    <span asp-validation-for="DataEmissao" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="PeriodoPagamentoInicio" class="control-label"></label>
                    <input asp-for="PeriodoPagamentoInicio" class="form-control" />
                    <span asp-validation-for="PeriodoPagamentoInicio" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="PeriodoPagamentoFim" class="control-label"></label>
                    <input asp-for="PeriodoPagamentoFim" class="form-control" />
                    <span asp-validation-for="PeriodoPagamentoFim" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Niss" class="control-label"></label>
                    <input asp-for="Niss" class="form-control" />
                    <span asp-validation-for="Niss" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Entidade" class="control-label"></label>
                    <input asp-for="Entidade" class="form-control" />
                    <span asp-validation-for="Entidade" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Referencia" class="control-label"></label>
                    <input asp-for="Referencia" class="form-control" />
                    <span asp-validation-for="Referencia" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-center align-items-center">
                <div class="col">
                    <a asp-action="Index" asp-route-id=@Model.IdEmpresa class="btn btn-sm btn-outline-secondary form-control">Voltar</a>
                </div>
                <div class="col">
                    <input type="submit" value="Guardar" class="btn btn-sm btn-outline-secondary form-control" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/n94ifuzvl80pchikopiwgz2esrw8n28dwcywvpejlqrregfp/tinymce/5/tinymce.min.js"></script>
}