@model Ciclope.Models.DocIMI

@{
    ViewData["Title"] = "Editar Imóvel";
}

<div class="row h-100">
    <partial name="_DisplaySideMenuPartial" for="IdEmpresa" />
    <div class="col-md-10 row h-100 justify-content-center align-items-center">
        <form asp-action="Edit" enctype="multipart/form-data">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdEmpresa" value=@Model.IdEmpresa />
            <input type="hidden" asp-for="LocalFicheiro" value=@Model.LocalFicheiro />

            <div class="form-group row">
                <div class="col">
                    <label asp-for="IdentificacaoFiscal" class="control-label"></label>
                    <input asp-for="IdentificacaoFiscal" class="form-control" />
                    <span asp-validation-for="IdentificacaoFiscal" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="AnoImposto" class="control-label"></label>
                    <input asp-for="AnoImposto" class="form-control" />
                    <span asp-validation-for="AnoImposto" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="DataLiquidacao" class="control-label"></label>
                    <input asp-for="DataLiquidacao" class="form-control" />
                    <span asp-validation-for="DataLiquidacao" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col">
                    <label asp-for="IdentificacaoDocumento" class="control-label"></label>
                    <input asp-for="IdentificacaoDocumento" class="form-control" />
                    <span asp-validation-for="IdentificacaoDocumento" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="ReferenciaPagamento" class="control-label"></label>
                    <input asp-for="ReferenciaPagamento" class="form-control" />
                    <span asp-validation-for="ReferenciaPagamento" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="ImportanciaPagar" class="control-label"></label>
                    <input asp-for="ImportanciaPagar" class="form-control" />
                    <span asp-validation-for="ImportanciaPagar" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="AnoPagamento" class="control-label"></label>
                    <input asp-for="AnoPagamento" class="form-control" />
                    <span asp-validation-for="AnoPagamento" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="MesPagamento" class="control-label"></label>
                    <input asp-for="MesPagamento" class="form-control" />
                    <span asp-validation-for="MesPagamento" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-center align-items-center">
                <div class="col">
                    <a asp-action="Index" asp-route-id=@Model.IdEmpresa class="btn btn-sm btn-outline-secondary form-control">Voltar</a>
                </div>
                <div class="col">
                    <input type="submit" value="Guardar" class="btn btn-sm btn-outline-secondary form-control" />
                </div>
            </div>
        </form>
    </div>
</div>

