@model Ciclope.Models.DocDRI

@{
    ViewData["Title"] = "Editar DRI";
}

<style>
    .form-control {
        width: 250px;
    }

    .col {
        flex-grow: 0;
    }
</style>

<div class="row h-100">
    <partial name="_DisplaySideMenuPartial" for="IdEmpresa" />
    <div class="col-md-10 row h-100 justify-content-center align-items-center">
        <form asp-action="Edit" enctype="multipart/form-data">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdEmpresa" />
            <input type="hidden" asp-for="LocalFicheiro" />
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="DataEntrega" class="control-label"></label>
                    <input asp-for="DataEntrega" class="form-control" />
                    <span asp-validation-for="DataEntrega" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="DataRegisto" class="control-label"></label>
                    <input asp-for="DataRegisto" class="form-control" />
                    <span asp-validation-for="DataRegisto" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="NIdentificacaoSS" class="control-label"></label>
                    <input asp-for="NIdentificacaoSS" class="form-control" />
                    <span asp-validation-for="NIdentificacaoSS" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="TotalRemuneracoes" class="control-label"></label>
                    <input asp-for="TotalRemuneracoes" class="form-control" />
                    <span asp-validation-for="TotalRemuneracoes" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="TotalContribuicoes" class="control-label"></label>
                    <input asp-for="TotalContribuicoes" class="form-control" />
                    <span asp-validation-for="TotalContribuicoes" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-center align-items-center">
                <div class="col">
                    <a asp-action="Index" asp-route-id=@Model.IdEmpresa class="btn btn-sm btn-outline-secondary form-control">Voltar</a>
                </div>
                <div class="col">
                    <input type="submit" value="Guardar" class="btn btn-sm btn-outline-secondary form-control" />
                </div>
            </div>
        </form>
    </div>
</div>