@model Ciclope.Models.DocIUC

@{
    ViewData["Title"] = "Editar IUC";
}

<style>
    .form-control {
        width: 250px;
    }

    .col {
        flex-grow: 0;
    }
</style>

<div class="row h-100">
    <partial name="_DisplaySideMenuPartial" for="EmpresaId" />
    <div class="col-md-10 row h-100 justify-content-center align-items-center">
        <form asp-action="Edit" enctype="multipart/form-data">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmpresaId" />
            <input type="hidden" asp-for="LocalFicheiro" />
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Morada" class="control-label"></label>
                    <input asp-for="Morada" class="form-control" />
                    <span asp-validation-for="Morada" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Matricula" class="control-label"></label>
                    <input asp-for="Matricula" class="form-control" />
                    <span asp-validation-for="Matricula" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Mes" class="control-label"></label>
                    <input asp-for="Mes" class="form-control" />
                    <span asp-validation-for="Mes" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="IdentificacaoFicheiro" class="control-label"></label>
                    <input asp-for="IdentificacaoFicheiro" class="form-control" />
                    <span asp-validation-for="IdentificacaoFicheiro" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="IdentificacaoFiscal" class="control-label"></label>
                    <input asp-for="IdentificacaoFiscal" class="form-control" />
                    <span asp-validation-for="IdentificacaoFiscal" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Data" class="control-label"></label>
                    <input asp-for="Data" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="ReferenciaPagamento" class="control-label"></label>
                    <input asp-for="ReferenciaPagamento" class="form-control" style="width: 530px;" />
                    <span asp-validation-for="ReferenciaPagamento" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="ImportanciaPagar" class="control-label"></label>
                    <input asp-for="ImportanciaPagar" class="form-control" />
                    <span asp-validation-for="ImportanciaPagar" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Ano" class="control-label"></label>
                    <input asp-for="Ano" class="form-control" />
                    <span asp-validation-for="Ano" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-center align-items-center">
                <div class="col">
                    <a asp-action="Index" asp-route-id=@Model.EmpresaId class="btn btn-sm btn-outline-secondary form-control">Voltar</a>
                </div>
                <div class="col">
                    <input type="submit" value="Guardar" class="btn btn-sm btn-outline-secondary form-control" />
                </div>
            </div>
        </form>
    </div>
</div>
