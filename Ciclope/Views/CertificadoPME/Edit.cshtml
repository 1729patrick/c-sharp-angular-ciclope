@model Ciclope.Models.DocCertificadoPME

@{
    ViewData["Title"] = "Editar Certificado PME";
}

<div class="row h-100">
    <partial name="_DisplaySideMenuPartial" for="IdEmpresa" />
    <div class="col-md-10 row h-100 justify-content-center align-items-center">
        <form asp-action="Edit" enctype="multipart/form-data">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdEmpresa" />
            <input type="hidden" asp-for="LocalFicheiro" />
            <div class="form-group">
                <label asp-for="IdClassificacao" class="control-label"></label>
                <select asp-for="IdClassificacao" class="form-control"
                        asp-items="ViewBag.Classificacoes">
                </select>
                <span asp-validation-for="IdClassificacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDecissao" class="control-label"></label>
                <input asp-for="DataDecissao" class="form-control" type="date" />
                <span asp-validation-for="DataDecissao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEfeito" class="control-label"></label>
                <input asp-for="DataEfeito" class="form-control" type="date" />
                <span asp-validation-for="DataEfeito" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col">
                    <a asp-action="Index" asp-route-id=@Model.IdEmpresa class="btn btn-sm btn-outline-secondary form-control">Voltar</a>
                </div>
                <div class="col">
                    <input type="submit" value="Guardar" class="btn btn-sm btn-outline-secondary form-control" />
                </div>
            </div>
        </form>
    </div>
</div>




    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
        <script src="https://cdn.tiny.cloud/1/n94ifuzvl80pchikopiwgz2esrw8n28dwcywvpejlqrregfp/tinymce/5/tinymce.min.js"></script>
    }

