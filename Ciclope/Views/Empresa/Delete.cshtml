@model Ciclope.Models.Empresa

@{
    ViewData["Title"] = "Apagar Empresa";
}
<div class="row h-100 ">
    <div class="col-md-12 row h-100 justify-content-center align-items-center">
        <form asp-action="Delete">
            <h1>@ViewData["Title"]</h1>
            <hr />
             <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nif)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nif)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Morada)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Morada)
            </dd>
        </dl>
            <div class="row justify-content-center align-items-center">
                <div class="col">
                    <a asp-action="Index" asp-route-id=@Model.Id class="btn btn-sm btn-outline-secondary form-control">Voltar</a>
                </div>
                <div class="col">
                    <input type="submit" value="Apagar" class="btn btn-sm btn-outline-secondary form-control" />
                </div>
            </div>
        </form>
    </div>
</div>